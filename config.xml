<?xml version='1.0' encoding='utf-8'?>
<widget id="center.collab.bookmenow" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Book Me Now</name>
    <description>
        Quick and dirty app to book a shared Google resource (e.g. a conference room)
    </description>
    <author email="lpoflynn@protonmail.com" href="https://github.com/whirish/book-me-now/wiki">
        (C) Liam O'Flynn 2016
    </author>
    <platform name="ios">
        <icon src="res/icon_72x72.png" width="72" height="72" />
        <icon src="res/icon_57x57.png" width="57" height="57" />
        <!-- splash src="res/splash.png" width="1334" height="750" / -->
    </platform>
    <icon src="res/icon_1024x1024.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <!-- plugin name="BarcodeScanner" value="com.phonegap.plugins.barcodescanner.BarcodeScanner"></plugin -->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-navigation href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
